extends layout

block content
	.main.container
		.row
			.col-md-6.col-md-offset-3
				h1.display-4.m-b-2 Sign Up

				// register form
			form(method='POST' action='/login')
				div.form-group
					label(for='name') Name:
					input#name.form-control(type='text', placeholder='first and last' name='username')
				div.form-group
					label(for='password') Passowrd:
				input#password.form-control(type='password', name='password')
				button.btn.btn-primary(type='submit') Login